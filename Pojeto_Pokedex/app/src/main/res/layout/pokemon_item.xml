<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_home_pokemon_list"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        >

        <ImageView
            android:layout_marginStart="20dp"
            android:id="@+id/img_pokemon"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/buba"

            ></ImageView>
        <TextView
            android:id="@+id/name_pokemon"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_toEndOf="@id/img_pokemon"
            android:layout_alignTop="@id/img_pokemon"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:id="@+id/id_pokemon"
            android:ellipsize="marquee"
            android:text="fgsdg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/name_pokemon"
            android:layout_alignStart="@id/name_pokemon"
            android:layout_marginBottom="10dp"
            />

        <ImageView
            android:id="@+id/img_poder2"
            android:layout_marginHorizontal="10dp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="Atributo"
            android:src="@drawable/fire"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>


